{
  "compilerOptions": {
    "baseUrl": "./",
    "downlevelIteration": true,
    "outDir": "./dist",
    "declaration": false,
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "esnext",
      "dom.iterable",
      "scripthost"
    ]
  },
  "compileOnSave": true,
  "include": [
    "src/**/*.ts",
    "src/**/*.scss",
    "typings",
    "src"
  ],
  "exclude": [
    "node_modules",
    "webpack.*.js"
  ]
}
